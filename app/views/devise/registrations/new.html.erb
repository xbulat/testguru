<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <h2><%= t('.header') %></h2>
    <div class="card border-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { toggle: 'validator' }) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <p>
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true, placeholder: 'example@gmail.com', type: 'email' %>
            </p>
            <p>
              <%= f.label :first_name %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form-control', required: true %>
            </p>
            <p>
              <%= f.label :last_name %>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control', required: true %>
            </p>
            <p>
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: 'password form-control', data: { minlenght: 6 } %>
            </p>
            <p>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'confirmation form-control', data: { match: "#user_password" } %>
            <div class="help-block with-errors"></div>
            </p>
            <div class="text-center">
              <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
